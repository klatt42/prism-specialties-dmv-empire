    <script>
        // Photo restoration family specific functionality
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üì∏ Photo restoration family legacy blog loaded');

            // Track family/personal content engagement
            if (window.prismTracker) {
                window.prismTracker.trackPageView('photoRestorationFamily', window.location.href);

                // Add personal/family content score
                window.prismTracker.sessionData.contentScore += 25; // Personal category
                window.prismTracker.updateLeadQuality();
            }

            // Monitor photo restoration family engagement
            let familyEngagement = 0;
            const familyIndicators = [
                'photo-restoration', 'family-archive', 'genealogy', 'slide-conversion',
                'digital-preservation', 'free-sample', 'family-legacy', 'restoration'
            ];

            // Track scroll depth on family photo content
            window.addEventListener('scroll', function() {
                const scrollPercent = Math.round((window.scrollY / (document.documentElement.scrollHeight - window.innerHeight)) * 100);

                // Family photo restoration engagement scoring
                if (scrollPercent >= 25 && familyEngagement < 1) {
                    familyEngagement = 1;
                    if (window.prismTracker) {
                        window.prismTracker.sessionData.contentScore += 15; // Family content engagement
                        window.prismTracker.updateLeadQuality();
                    }
                }

                if (scrollPercent >= 75 && familyEngagement < 2) {
                    familyEngagement = 2;
                    if (window.prismTracker) {
                        window.prismTracker.sessionData.contentScore += 15; // Deep family engagement
                        window.prismTracker.updateLeadQuality();
                    }

                    // Trigger family photo automation
                    if (window.prismAutomation) {
                        window.prismAutomation.triggerWarmLeadSequence();
                    }
                }
            });

            // Track family photo restoration phone clicks
            document.querySelectorAll('.family-phone-cta').forEach(cta => {
                cta.addEventListener('click', function(e) {
                    console.log('üì∏ Family photo phone CTA clicked:', e.target.textContent);

                    if (window.prismTracker) {
                        window.prismTracker.sessionData.contentScore += 75; // Family photo phone click
                        window.prismTracker.updateLeadQuality();
                    }

                    // Family photo restoration automation trigger
                    if (window.prismAutomation) {
                        window.prismAutomation.triggerWarmLeadSequence();
                    }
                });
            });

            // Auto-populate service type for photo restoration
            setTimeout(() => {
                const serviceSelect = document.getElementById('serviceType');
                if (serviceSelect && !serviceSelect.value) {
                    serviceSelect.value = 'document_restoration'; // Closest match for photo restoration
                    serviceSelect.dispatchEvent(new Event('change'));
                }

                // Auto-populate urgency for consultation
                const urgencySelect = document.getElementById('urgency');
                if (urgencySelect && !urgencySelect.value) {
                    urgencySelect.value = 'planning';
                    urgencySelect.dispatchEvent(new Event('change'));
                }
            }, 2000);

            // Legacy badges interaction
            const legacyBadges = document.querySelectorAll('.legacy-badge');
            legacyBadges.forEach(badge => {
                badge.addEventListener('click', function() {
                    if (window.prismTracker) {
                        window.prismTracker.sessionData.contentScore += 10; // Family legacy interest
                        window.prismTracker.updateLeadQuality();
                    }
                });
            });

            // Before/after gallery engagement
            const gallerySection = document.querySelector('.before-after-gallery');
            if (gallerySection) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            if (window.prismTracker) {
                                window.prismTracker.sessionData.contentScore += 15; // Before/after gallery interest
                                window.prismTracker.updateLeadQuality();
                            }
                        }
                    });
                }, { threshold: 0.5 });

                observer.observe(gallerySection);
            }

            // Genealogy societies engagement
            const genealogySection = document.querySelector('.genealogy-societies');
            if (genealogySection) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            if (window.prismTracker) {
                                window.prismTracker.sessionData.contentScore += 10; // Genealogy society interest
                                window.prismTracker.updateLeadQuality();
                            }
                        }
                    });
                }, { threshold: 0.5 });

                observer.observe(genealogySection);
            }

            // Digital preservation engagement
            const preservationSection = document.querySelector('.digital-preservation');
            if (preservationSection) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            if (window.prismTracker) {
                                window.prismTracker.sessionData.contentScore += 10; // Digital preservation interest
                                window.prismTracker.updateLeadQuality();
                            }
                        }
                    });
                }, { threshold: 0.5 });

                observer.observe(preservationSection);
            }

            // Restoration type cards interaction
            document.querySelectorAll('.restoration-card').forEach(card => {
                card.addEventListener('click', function() {
                    if (window.prismTracker) {
                        window.prismTracker.sessionData.contentScore += 10; // Restoration type interest
                        window.prismTracker.updateLeadQuality();
                    }
                });
            });

            // Digitization process engagement
            const processSection = document.querySelector('.digitization-process');
            if (processSection) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            if (window.prismTracker) {
                                window.prismTracker.sessionData.contentScore += 10; // Digitization process interest
                                window.prismTracker.updateLeadQuality();
                            }
                        }
                    });
                }, { threshold: 0.5 });

                observer.observe(processSection);
            }

            // Case study engagement tracking
            const caseStudy = document.querySelector('.case-study-family');
            if (caseStudy) {
