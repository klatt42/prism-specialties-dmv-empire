    <!-- Analytics and Fire Recovery Tracking -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Track fire emergency CTA clicks with highest priority
            document.querySelectorAll('a[href^="tel:301-215-3191"]').forEach(button => {
                button.addEventListener('click', function() {
                    console.log('Fire Emergency CTA clicked: Church Fire Recovery Blog - 301-215-3191');
                });
            });

            // Track fire recovery content engagement
            let startTime = Date.now();
            let fireRecoveryScrollDepth = 0;
            let rushTimelineViewed = false;
            let servicesViewed = false;

            // Track if user viewed rush timeline (high-intent signal)
            const timelineElements = document.querySelectorAll('[style*="10-DAY RUSH"], [style*="RUSH FIRE RECOVERY"]');
            if (timelineElements.length > 0) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting && !rushTimelineViewed) {
                            rushTimelineViewed = true;
                            console.log('Rush fire recovery timeline viewed - emergency intent signal');
                        }
                    });
                });
                timelineElements.forEach(el => observer.observe(el));
            }

            // Track fire recovery services viewing
            const servicesElements = document.querySelectorAll('[style*="Fire Damage Assessment"], [style*="Smoke Cleaning"]');
            if (servicesElements.length > 0) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting && !servicesViewed) {
                            servicesViewed = true;
                            console.log('Fire recovery services viewed - high service intent');
                        }
                    });
                });
                servicesElements.forEach(el => observer.observe(el));
            }

            window.addEventListener('scroll', function() {
                const scrollPercent = (window.scrollY / (document.body.scrollHeight - window.innerHeight)) * 100;
                if (scrollPercent > fireRecoveryScrollDepth) {
                    fireRecoveryScrollDepth = scrollPercent;

                    if (scrollPercent > 50) {
                        console.log('Fire recovery content 50% scroll depth reached');
                    }
                }
            });

            window.addEventListener('beforeunload', function() {
                let timeSpent = Date.now() - startTime;
                if (timeSpent > 150000 && rushTimelineViewed && fireRecoveryScrollDepth > 60) {
                    console.log('High fire recovery interest: ' + Math.round(timeSpent/1000) + 's, timeline viewed, ' + Math.round(fireRecoveryScrollDepth) + '% scroll');
                }
            });
        });
    </script>
