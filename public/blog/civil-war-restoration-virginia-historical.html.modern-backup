                        window.prismTracker.sessionData.contentScore += 20; // Deep historical engagement
                        window.prismTracker.updateLeadQuality();
                    }

                    // Trigger historical content automation
                    if (window.prismAutomation) {
                        window.prismAutomation.triggerAuthorityContentSequence();
                    }
                }
            });

            // Track historical phone clicks
            document.querySelectorAll('.historical-phone-cta').forEach(cta => {
                cta.addEventListener('click', function(e) {
                    console.log('‚öîÔ∏è Historical phone CTA clicked:', e.target.textContent);

                    if (window.prismTracker) {
                        window.prismTracker.sessionData.contentScore += 75; // Historical phone click
                        window.prismTracker.updateLeadQuality();
                    }

                    // Historical authority automation trigger
                    if (window.prismAutomation) {
                        window.prismAutomation.triggerAuthorityContentSequence();
                    }
                });
            });

            // Auto-populate service type for Civil War restoration
            setTimeout(() => {
                const serviceSelect = document.getElementById('serviceType');
                if (serviceSelect && !serviceSelect.value) {
                    serviceSelect.value = 'document_restoration'; // Closest match for historical artifacts
                    serviceSelect.dispatchEvent(new Event('change'));
                }

                // Auto-populate urgency for consultation
                const urgencySelect = document.getElementById('urgency');
                if (urgencySelect && !urgencySelect.value) {
                    urgencySelect.value = 'consultation';
                    urgencySelect.dispatchEvent(new Event('change'));
                }
            }, 2000);

            // Museum quality expertise badges interaction
            const expertiseBadges = document.querySelectorAll('.expertise-badge');
            expertiseBadges.forEach(badge => {
                badge.addEventListener('click', function() {
                    if (window.prismTracker) {
                        window.prismTracker.sessionData.contentScore += 10; // Museum expertise interest
                        window.prismTracker.updateLeadQuality();
                    }
                });
            });

            // Battlefield section engagement
            const battlefieldSection = document.querySelector('.battlefield-section');
            if (battlefieldSection) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            if (window.prismTracker) {
                                window.prismTracker.sessionData.contentScore += 15; // Battlefield interest
                                window.prismTracker.updateLeadQuality();
                            }
                        }
                    });
                }, { threshold: 0.5 });

                observer.observe(battlefieldSection);
            }

            // Museum partnerships engagement
            const museumSection = document.querySelector('.museum-partnerships');
            if (museumSection) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            if (window.prismTracker) {
                                window.prismTracker.sessionData.contentScore += 10; // Museum partnership interest
                                window.prismTracker.updateLeadQuality();
                            }
                        }
                    });
                }, { threshold: 0.5 });

                observer.observe(museumSection);
            }

            // Authentication process engagement
            const authSection = document.querySelector('.authentication-process');
            if (authSection) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            if (window.prismTracker) {
                                window.prismTracker.sessionData.contentScore += 15; // Authentication interest
                                window.prismTracker.updateLeadQuality();
                            }
                        }
                    });
                }, { threshold: 0.5 });

                observer.observe(authSection);
            }

            // Provenance documentation engagement
            const provenanceSection = document.querySelector('.provenance-documentation');
            if (provenanceSection) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            if (window.prismTracker) {
                                window.prismTracker.sessionData.contentScore += 10; // Provenance interest
                                window.prismTracker.updateLeadQuality();
                            }
                        }
                    });
                }, { threshold: 0.5 });

                observer.observe(provenanceSection);
            }

            // Artifact type cards interaction
            document.querySelectorAll('.artifact-card').forEach(card => {
                card.addEventListener('click', function() {
                    if (window.prismTracker) {
                        window.prismTracker.sessionData.contentScore += 10; // Artifact type interest
                        window.prismTracker.updateLeadQuality();
                    }
                });
            });

            // Case study engagement tracking
            const caseStudy = document.querySelector('.case-study-civil-war');
            if (caseStudy) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            if (window.prismTracker) {
                                window.prismTracker.sessionData.contentScore += 10; // Civil War case study engagement
                                window.prismTracker.updateLeadQuality();
                            }
                        }
                    });
                }, { threshold: 0.5 });

                observer.observe(caseStudy);
            }
        });
    </script>
